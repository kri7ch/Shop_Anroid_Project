<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    tools:context=".Activity_Profile">

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="800dp"
        android:background="@drawable/bkg_main_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/text_name_shop"
            style="@style/style_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:layout_gravity="center"
            android:translationY="-355dp" />

        <View
            android:id="@+id/category"
            android:layout_width="390dp"
            android:layout_height="180dp"
            android:background="@drawable/bkg_profile"
            android:translationX="10dp"
            android:translationY="90dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:translationY="-250dp"
            app:srcCompat="@drawable/profile_avatar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:translationX="335dp"
            android:translationY="105dp"
            app:srcCompat="@drawable/setting_icon" />


        <View
            android:id="@+id/Products"
            android:layout_width="390dp"
            android:layout_height="385dp"
            android:background="@drawable/bkg_profile"
            android:translationX="10dp"
            android:translationY="280dp" />



        <GridLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:translationY="675dp"
            android:layout_height="125dp"
            tools:ignore="VisualLintBounds">


            <ImageView
                android:id="@+id/icon_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:importantForAccessibility="no"
                android:translationX="20dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/main_menu_noact"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:importantForAccessibility="no"
                android:translationX="55dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/search_icon"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/icon_korzina"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:importantForAccessibility="no"
                android:translationX="90dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/korzina_icon"
                tools:ignore="ImageContrastCheck" />


            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:importantForAccessibility="no"
                android:translationX="105dp"
                android:translationY="0dp"
                app:srcCompat="@drawable/profile_act"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>