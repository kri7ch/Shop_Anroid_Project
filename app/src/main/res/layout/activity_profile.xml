<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    tools:context=".Activity_Profile">

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="800dp"
        android:background="@drawable/bkg_main_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintBounds">

        <TextView
            android:id="@+id/text_name_shop"
            style="@style/style_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:layout_gravity="center"
            android:translationY="-355dp" />

        <View
            android:id="@+id/category"
            android:layout_width="390dp"
            android:layout_height="180dp"
            android:background="@drawable/bkg_profile"
            android:translationX="10dp"
            android:translationY="90dp" />

        <TextView
            android:id="@+id/text_email"
            style="@style/style_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_for_email"
            android:layout_gravity="center"
            android:translationY="-195dp" />

        <TextView
            android:id="@+id/text_name"
            style="@style/style_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_for_name"
            android:layout_gravity="center"
            android:translationY="-165dp" />

        <ImageView
            android:id="@+id/image_Profile_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:translationY="-250dp"
            app:srcCompat="@drawable/profile_avatar" />

        <ImageView
            android:id="@+id/image_Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:translationX="335dp"
            android:translationY="105dp"
            app:srcCompat="@drawable/setting_icon" />


        <View
            android:id="@+id/Products"
            android:layout_width="390dp"
            android:layout_height="385dp"
            android:background="@drawable/bkg_profile"
            android:translationX="10dp"
            android:translationY="280dp"/>

        <ScrollView
            android:layout_width="390dp"
            android:layout_height="385dp"
            android:translationX="10dp"
            android:translationY="280dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="10dp"
                android:orientation="vertical"
                tools:ignore="TextSizeCheck">

                <TextView
                    android:id="@+id/link_orders"
                    style="@style/style_link"
                    android:paddingTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orders"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/link_purchased"
                    style="@style/style_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/link_cooperation"
                    style="@style/style_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cooperation"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/link_feedback"
                    style="@style/style_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/link_feedback_questions"
                    style="@style/style_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_questions"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/link_support"
                    style="@style/style_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/support"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/log_out"
                    style="@style/style_link"
                    android:paddingBottom="25dp"
                    android:textColor="#FF0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/log_out"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </ScrollView>



        <GridLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:translationY="675dp"
            android:layout_height="125dp"
            tools:ignore="VisualLintBounds">


            <ImageView
                android:id="@+id/icon_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:importantForAccessibility="no"
                android:translationX="20dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/main_menu_noact"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:importantForAccessibility="no"
                android:translationX="55dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/search_icon"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/icon_korzina"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:importantForAccessibility="no"
                android:translationX="90dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/korzina_icon"
                tools:ignore="ImageContrastCheck" />


            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:importantForAccessibility="no"
                android:translationX="105dp"
                android:translationY="0dp"
                app:srcCompat="@drawable/profile_act"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>