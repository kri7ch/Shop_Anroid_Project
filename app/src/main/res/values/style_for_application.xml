<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_application_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:shadowColor">#949393</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_style">
        <item name="android:background">@drawable/custom_bkg_btn</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tb_style">
        <item name="android:background">@drawable/custom_tb</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textColorHint">#949494</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_categories_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:shadowColor">#949393</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#949494</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:background">@drawable/bkg_for_search</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="style_for_product_card">
        <item name="cornerRadius">25dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="product_style_text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btn_buy">
        <item name="fontFamily">@font/jura_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#595576</item>
    </style>

    <style name="style_name_category">
        <item name="fontFamily">@font/jura_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_desc_category">
        <item name="fontFamily">@font/jura_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="style_profile_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:shadowColor">#949393</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_name_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_email_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_link">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="message_text">
        <item name="background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/jura_light</item>
    </style>

    <style name="style_sheet_text">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:shadowColor">#949393</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_info">
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="style_for_question">
        <item name="fontFamily">@font/jura_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_for_titles">
        <item name="android:background">@drawable/bkg_for_titles</item>
        <item name="android:textColor">#525252</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="style_for_param">
        <item name="android:background">@drawable/bkg_for_titles</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableEnd">@drawable/baseline_edit_24</item>
        <item name="drawableTint">#606060</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="paymentMethod">
        <item name="android:textColor">#525252</item>
        <item name="android:fontFamily">@font/jura_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>